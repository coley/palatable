<div class="formContainerSignup">

<%= form_for(@user) do |f| %>

  <%= render :partial => 'shared/profile_fields', :locals => { :f => f }  %>

  <div class="field">
    <%= f.label :password_confirmation, "Confirm Password", :class => "fieldLabel" %>
    <%= f.password_field :password_confirmation %><br /><br />
  </div>
  <div class="actions">
    <%= f.submit "Register", :class => "formSubmissionButtons" %>
    <br /><br />
  </div>
  
  <%= render 'shared/errorUser_messages', :object => f.object %>

<% end %>

</div>
