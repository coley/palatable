<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @bookmark.name %>
</p>

<p>
  <b>URL:</b>
  <% if /^http/.match(@bookmark.url)
       aUrl = @bookmark.url
  else
      aUrl = "http://#{@bookmark.url}"
  end
  %>
  
  <%= link_to (aUrl), aUrl, :target => '_blank' %>
</p>

<p>
  <b>Date Saved:</b>
  <%  if @bookmark.date_saved != nil
        date_exists = true
      else
        date_exists = false
      end
  %>
  <%= if date_exists
        @bookmark.date_saved.strftime("%m/%d/%Y")
      else
        "unknown"
      end %>
</p>

<%= link_to 'Back', bookmarks_path %>
