<div id="indexAllBookmarks">
<% @bookmarks.each do |bookmark|

  if bookmark.date_saved != nil
    date_exists = true
  else
    date_exists = false
  end
   
  if /^http/.match(bookmark.url)
    aUrl = bookmark.url
  else
    aUrl = "http://#{bookmark.url}"
  end
%>

  <div class="indexBookmarkContainer">
    
    <div class="indexBookmarkData">
      
      <div class="indexBookmarkTitleContainer">
          <div class="indexBookmarkTitle">
            <h3><%= link_to bookmark.name, bookmark %></h3>
          </div>
      </div>
      
      <div class="indexBookmarkUrl">
        <%= link_to (aUrl), aUrl, :target => '_blank' %><br />
      </div>
      
      <div class="indexBookmarkSaveDate">(date saved: 
         <%= if date_exists
            bookmark.date_saved.strftime("%m/%d/%Y")
          else
            "unknown"
          end %>)
      </div>
      
    </div>
  </div>
<% end %>

</div>