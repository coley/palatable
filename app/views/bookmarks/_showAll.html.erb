<div id="indexAllBookmarks">
<% @bookmarks.each do |bookmark|
   
  if /^http/.match(bookmark.url)
    aUrl = bookmark.url
  else
    aUrl = "http://#{bookmark.url}"
  end
%>

  <div class="indexBookmarkContainer">
    
    <div class="indexBookmarkData">
      
      <div class="indexBookmarkTitleContainer">
          <div class="indexBookmarkTitle">
            <h3 class="bookmarkTitle">
              <%= link_to bookmark.name, bookmark, :class => "linkBookmarkTitle" %>
            </h3>
          </div>
      </div>
      
      <div class="indexBookmarkUrl">
        <%= link_to (aUrl), aUrl, :target => '_blank' %><br />
      </div>
      
      <div class="indexBookmarkSaveDate">(date updated: 
         <%= bookmark.updated_at.strftime("%m/%d/%Y") %>)
      </div>
      
    </div>
  </div>
<% end %>

</div>