<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= stylesheet_link_tag "invention/style.css", :cache => true %>
  <%= javascript_include_tag :defaults, :cache => true %>
  <%= csrf_meta_tag %>
</head>
<body>
  
<div id="wrapper">
  <div id="content">
      <%= render 'layouts/header' %>
    <div id="contentarea">
      
      <div class="flash">
        <% flash.each do |type, message| -%>
          <div class="message <%= type %>">
            <p><%= message %></p>
          </div>
        <% end -%>
      </div>
        
      <div id="mainarea">
                 
        
         <%= yield %>
      </div>

    </div>
         
  </div>
    <!--<%= render 'layouts/footer' %>-->
    
</div>
 
    <div id="siteDetails">
     <%= debug(params) if Rails.env.development? %>
    </div>
</body>
</html>
